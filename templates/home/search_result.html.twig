{% endblock %}


{% block body %}
    <div class="responsif-none">
        {% include 'shard/navbar.twig' %}
    </div>
    {% include 'shard/modalSearch.twig' %}
    <div class="content_main">
        
        <div class="row">
            <div class="responsif-none" id="tous">
                {% include 'shard/home/search_navleft.html.twig' %}
            </div>
            <div class="content">
                <div class="content_cart_map">
                    
                    <div id="remove-detail" class="hidden responsif-none">
                        <div class="container-fluid list-depart-all-detail list-depart-all-detail-tous responsif-none" id="content-details"></div>
                    </div>
                    <div class="cart_map">
                        <div class="chargement_content" id="toggle_chargement">
                            <div class="content_box">
                                <div class="box">
                                    <div class="under_box"></div>
                                </div>
                            </div>
                        </div>
                        <div class="content_show_list_mobile">
                            <i class="fa-solid fa-circle-arrow-right fetch_list_departement_jheo_js"></i>
                        </div>
                        <div id="map" class="map"></div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row content_left_side_mobile">
            {% include 'shard/home/fetchLeftSide.html.twig' %}
        </div>

        <button type="button" class="d-none show_detail_for_mobile_js_jheo" data-bs-toggle="modal" data-bs-target="#detailModalMobil"></button>
    </div>

    {% include 'shard/home/detail_home_navleft.twig' %}
    {% include 'shard/home/modalFilterHome.html.twig' %}
    {% include 'shard/home/modal_detail_home_mobile.html.twig' %}

