{% extends 'base.html.twig' %}

{% block title %}ConsoMyZone: Recherche{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/css/home/app.css')}}">
    <link rel="stylesheet" href="{{asset('assets/css/home/search.css')}}">
    <link rel="stylesheet" href="{{asset('assets/css/home/responsif_home.css')}}">
{% endblock %}

{% block javascripts %}
    <script src="{{asset('assets/js/home/search.js')}}" defer></script>
    <script src="{{asset('assets/js/home/data_search.js')}}" defer></script>
