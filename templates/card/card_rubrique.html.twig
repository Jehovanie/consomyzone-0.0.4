<li class="card-list miseho element_js_jheo rubrique-item name_{{type}}_js_jheo">
    <div class="row container-depart pt-4 element" data-toggle-id="{{rubrique.id}}" data-toggle-latitude="{{((rubrique.lat) ? rubrique.lat : '0' )|format_number({fraction_digit: 15})}}" data-toggle-longitude="{{ ((rubrique.long) ? rubrique.long | raw : '0' )|format_number({fraction_digit: 14})}}">

        <div class="col-md-12">
            <div class="cmz-rubrique mb-2">
                <span class="rubrique small">
                    {% if type == "resto" %}
                        RESTAURANT
                    {% else %}
                        {{type|upper}}
                    {% endif %}
                </span>
            </div>
            <h5 class="card-title" id="rubriqueName" onclick="getDetailFromListLeft('{{rubrique.depName}}', '{{rubrique.dep}}', '{{rubrique.id}}')">
                <a class="name_to_filter_js_jheo" href="#">{{rubrique.nom|replace({'?': '','#': ''})|upper|trim }}</a>
            </h5>
            <p class="card-text cmz-adresse">
                <a onclick="getDetailFromListLeft('{{rubrique.depName}}', '{{rubrique.dep}}', '{{rubrique.id}}')" href="#" class="small">{{rubrique.add|replace({'?': ''})|capitalize|trim}}</a>
            </p>
            {% if type == "resto" %}
            <div class="cmz-categories-list">
                {% if rubrique.cafe %}
                    <span class="cmz-category">cafe</span>
                {% endif %}
                {% if rubrique.bar %}
                    <span class="cmz-category">bar</span>
                {% endif %}
                {% if rubrique.brasserie %}
                    <span class="cmz-category">brasserie</span>
                {% endif %}
                {% if rubrique.creperie %}
                    <span class="cmz-category">creperie</span>
                {% endif %}
                {% if rubrique.fastFood %}
                    <span class="cmz-category">fast_food</span>
                {% endif %}
                {% if rubrique.salonThe %}
                    <span class="cmz-category">salon_the</span>
                {% endif %}
                {% if rubrique.cuisineMonde %}
                    <span class="cmz-category">cuisine_monde</span>
                {% endif %}
                {% if rubrique.pizzeria %}
                    <span class="cmz-category">pizzeria</span>
                {% endif %}
                {% if rubrique.boulangerie %}
                    <span class="cmz-category">boulangerie</span>
                {% endif %}
            </div>
            {% endif %}
            {% if type == "ferme" %}
            <div class="cmz-categories-list">
                {% if rubrique.genre %}
                    <span class="cmz-category">{{rubrique.genre}}</span>
                {% endif %}
            </div>
            {% endif %}

            {% if type == "station" %}
            <div class="cmz-categories-list">
                {% if rubrique.prixE85 > 0 %}
                    <span class="cmz-category">E85</span>
                {% endif %}
                {% if rubrique.prixGplc > 0 %}
                    <span class="cmz-category">GPLC</span>
                {% endif %}
                {% if rubrique.prixSp95 > 0 %}
                    <span class="cmz-category">SP95</span>
                {% endif %}
                {% if rubrique.prixSp95E10 > 0 %}
                    <span class="cmz-category">SP95-E10</span>
                {% endif %}
                {% if rubrique.prixSp98 > 0 %}
                    <span class="cmz-category">SP98</span>
                {% endif %}
                {% if rubrique.prixGasoil > 0 %}
                    <span class="cmz-category">GASOIL</span>
                {% endif %}
            </div>
            {% endif %}

            {% if rubrique.tel is defined %}
                {% if rubrique.tel %}
                    <div class="cmz-tel">
                        <button onclick="displayContact(this)" type="button" class="btn btn-secondary">
                            <i class="bi bi-telephone-plus"></i> Afficher le N°
                        </button>
                        <span style="display:none;" class="tel">
                            <span>Tél : </span>{{rubrique.tel}}
                        </span>
                    </div>
                {% endif %}
            {% endif %}
            {% if rubrique.email is defined %}
                {% if rubrique.email %}
                    <div class="cmz-tel">
                        <button onclick="displayContact(this)" type="button" class="btn btn-secondary">
                            <i class="bi bi-envelope-plus"></i> Afficher l'email
                        </button>
                        <span style="display:none;" class="tel">
                            <span>Email : </span>{{rubrique.email}}
                        </span>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>
</li>