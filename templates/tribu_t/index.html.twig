{% extends 'base.html.twig' %}

{% block title %}ConsoMyZone
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/account/account.css')}}">
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
{% endblock %}

{% block javascripts %}
    <script  src="{{ asset('assets/js/account/account.js') }}" defer></script>
	<script  src="{{ asset('assets/js/account/account_mobile.js') }}" defer></script>
{% endblock %}

{% block body %}

	<div id="settingProfilId">

		<div class="content_left_menu_account fixed-top mt-5 col responsif-none">
					<div class="left_menu">
						{% include "shard/account_navleft.html.twig" %}
					</div>
				</div>
				<div class="content_left_menu_account_mobile fixed-top mt-5 col responsif-none-mobile">
					<div class="left_menu">
						{% include "shard/account_navleft_mobile.html.twig" %}
					</div>
				</div>
		<div class="navbar-mobile">
			<div class="fixed-top col responsif-none">
				{{ include('shard/account_navbar.html.twig') }}
			</div>

			<div class="fixed-top col responsif-none-mobile">
				{{ include('shard/account_navbar_mobile.html.twig') }}
			</div>
		</div>

		<div class="row account" id="container-mobile">

			<div class="content_global ">
				<div class="right_content tribuT_mobile">
					<div class="">

						<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
							<symbol id="check-circle-fill" fill="currentColor" viewbox="0 0 16 16">
								<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
							</symbol>
							<symbol id="exclamation-triangle-fill" fill="currentColor" viewbox="0 0 16 16">
								<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
							</symbol>
						</svg>

						<div class="row" style="height:100%; margin-top:10%">
							<div class="ms-3 col-lg-8 col-md-6 col-sm-6 tribuT_form" style="height:100%; margin-left:10px">

								<div class="">
									<h3 lng-tag="tribu_creer">Créer une tribu</h3>
									<div class="card card-pub">
										{% if message != null %}

											{% if isSuccess == true %}
												<div id="succesMessage" class="alert alert-success">
													<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
													{{ message }}</div>
											{% endif %}

											{% if isSuccess == false %}
												<div id="succesMessage" class="alert alert-danger">
													<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
													{{ message }}</div>
											{% endif %}

										{% endif %}

										<form class="container p-3 securityForm" method="POST">
											<div class="row">
												<input name="create_tribu" type="hidden" value="create_tribu_t">

												<div class="col-4">
													<input id="name" name="name" type="text" class="form-control w-100" placeholder="Entrer le nom de la tribu" required>
													<input id="name_normalize" name="name_normalize" type="hidden">
												</div>

                                                <div class="col-8">
													<input name="description" type="text" class="form-control w-100" placeholder="Déscription">
												</div>

											</div>
											
											<h5 class="mt-3" lng-tag="choix_ext">Choisir une extension</h5>
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" name="restaurant" role="switch" id="restaurant">
												<label class="form-check-label" for="restaurant">Restaurant</label>
											</div>
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" name="voiture" role="switch" id="voiture" disabled>
												<label class="form-check-label" for="voiture">Voiture</label>
											</div>
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" name="ferme" role="switch" id="ferme" disabled>
												<label class="form-check-label" for="ferme">Ferme</label>
											</div>
											<div class="form-check form-switch">
												<input class="form-check-input" type="checkbox" name="jvideo" role="switch" id="jvideo" disabled>
												<label class="form-check-label" for="jvideo">Jeux vidéo</label>
											</div>
											<div class="row">
											<div class="col-6">
													
												</div>
												<div class="col-6">
													<input class="btn btn-sm btn-primary w-100" type="submit" value="Créer">
												</div>
											</div>
										</form>

									</div>
								</div>
							</div>
						</div>

					</div>
				</div>
			</div>

		</div>
		
		<script>

			document.querySelector("#name").onchange = () => {
					document.querySelector("#name_normalize").value = document.querySelector("#name").value.normalize("NFD").replace(/\p{Diacritic}/gu, "");
				}

			let change_password_form = document.querySelector("#change_password");

			let succesMessage = document.querySelector("#succesMessage");

			if (change_password_form && succesMessage == null) {
				change_password_form.style.paddingTop = '2%';
			}
		</script>

	{% endblock %}
