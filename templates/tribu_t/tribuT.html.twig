<!-- Modal Créer tribuT -->
<div class="modal fade ModalCreationTribuT" id="ModalCreationTribuT" tabindex="-1" aria-labelledby="creerTribuTModal" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title" id="creerTribuTModal">
					Créer un nouveau tribu-T</h5>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<div class="mini-couvertur-tribu-t">
					<img src="{{asset('assets/image/mini-couverture.jpg')}}" alt="">
				</div>

				{# <form action="{{path('create_file')}}" class="form-tribu-t" method="post"> #}
				{{ form_start(form, {'method': 'POST'}) }}
				<label for="" class="label" id="uploadImage">
					{{ form_row(form.upload, {'attr': {'class': 'input'}}) }}
					<span class="label-uplaod-tribu-t"></span>
				</label>
				{{ form_row(form.tribuTName, {'attr': {'class': 'nom-tribu-t', 'placeholder': "Entrer le nom de la tribu"}}) }}
				{{ form_row(form.description, {'attr': {'class': 'description-tribu-t', 'placeholder': "Entrer votre déscription"}}) }}
				{{ form_row(form.adresse, {'attr': {'class': 'adress-tripu-t', 'placeholder': "Entrer votre adresse"}}) }}
				<p class="text-choisir">Choisir une extension</p>
				<div class="form-check form-switch mt-4">
					{{ form_row(form.extension, {'attr': {'class': 'form-check-input', 'role': "switch"}}) }}
				</div>
				<center class="mt-3">
					<button class="btn-creer" type="submit">Créer</button>
				</center>
				{{ form_end(form)}}

				{# </form> #}
			</div>


		</div>
	</div>
</div>

