<div class="">
    <div class="card mb-2">
        <div class="card-header">
            <h4>Partisants dans la tribu T</h4>
        </div>
        <div class="card-body" style="overflow-x:auto;">
            <table class="table table-list-membre table-striped">
                <thead class="thead-dark">
                    <tr>
                        {# <th>Prénom</th> #}
                        <th>Nom</th>
                        <th>Email</th>
                        {# <th>Adresse</th> #}
                        <th >Rôles</th>
                    </tr>
                </thead>
                <tbody>
                    {% if membre|length > 0 %}
                        {% for item in membre %}
                            <tr>
                                <td><a href="/user/profil/{{item["user_id"]}}">{{item["user_full_name"].lastname}} {{item["user_full_name"].firstname}}</a></td>
                                {# <td>{{item["user_full_name"].lastname}}</td> #}
                                <td>{{item["email"]}}</td>
                                {# <td>{{item["user_full_name"].adresse}}</td> #}
                                <td>
                                    {{item["role"]}}
                                    
                                    {% if item["admin"] %}

                                        {% if item["role"] == "Membre" %}
                                            {# <i class="fa-solid fa-triangle-exclamation text-danger"></i> #}
                                        {% else %}
                                            <i class="fa-solid fa-thumbs-up text-success"></i>
                                        {% endif %}

                                        {# <a href="{{path('app_dashboardapropos')}}" class="btn btn-sm btn-primary float-end">Administré</a> #}
                                    
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    {% endif %}
                </tbody>
            </table>
        </div>
    </div>
</div>