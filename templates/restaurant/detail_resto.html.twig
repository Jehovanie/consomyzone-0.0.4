<div class="content_home content_body_details_jheo_js">
	<div class="left_content_home">
        <div class="description" id="details-coord" data-toggle-id-resto="{{details.id}}" data-toggle-id-dep="{{id_dep}}" data-latitude="{{((details.poiY) ? details.poiY : '0' )|format_number({fraction_digit: 14}) }}" data-longitude="{{((details.poiX)  ? details.poiX : '0') |format_number({fraction_digit: 15})}}" data-nom="{{details.denominationF}}" data-codeinsee="{{details.codinsee}}">
            <div class="content_titre_details">
               
                {# /// nom et propriété #}
                <div class="titre text-center">
                    <h4>
                        {{details.denominationF | raw}}
                        <br>
                        {{details.numvoie  | raw}}
                        {{details.typevoie | raw}}
                        {{details.nomvoie | raw}}
                        {{details.codpost | raw}}
                        {{details.villenorm | raw}}
                    </h4>
                    <span>
                        <a id="see-tom-js" class="see-avis" data-bs-toggle="modal" data-bs-target="#staticBackdrop">avis</a>
                    </span>
                </div>
            </div>

            <div class="p-4">
                    
                {# note avis   #}
                <hr>
                <div class="content_note">
                    <div class="start">
                        <i class="fa-solid fa-star" data-rank="1"></i>
                        <i class="fa-solid fa-star" data-rank="2"></i>
                        <i class="fa-solid fa-star" data-rank="3"></i>
                        <i class="fa-solid fa-star" data-rank="4"></i>

                    </div>

                    <div class="nombre_avis"></div>
                </div>

                <hr>
                {# ///activiter #}

                <div class="content_activite">
                    <p class="activite">
                        <span class="fw-bold">Type restaurant:</span>
                        {% if details.restaurant %}
                            <i class="fa-solid fa-utensils"></i>
                            restaurant
                        {% endif %}
                        {% if details.brasserie %}
                            <i class="fa-solid fa-beer-mug-empty"></i>
                            Brasserie
                        {% endif %}
                        {% if details.creperie %}
                            <i class="fa-solid fa-pancakes"></i>
                            creperie
                        {% endif %}
                        {% if details.fastFood %}
                            <i class="fa-solid fa-burger"></i>
                            fastFood
                        {% endif %}
                        {% if details.pizzeria %}
                            <i class="fa-solid fa-pizza-slice"></i>
                            pizzeria
                        {% endif %}
                        {% if details.boulangerie %}
                            <i class="fa-solid fa-pie"></i>
                            boulangerie
                        {% endif %}
                        {% if details.bar %}
                            <i class="fa-solid fa-martini-glass-empty"></i>
                            bar
                        {% endif %}
                        {% if details.cuisineMonde %}
                            <i class="fa-solid fa-hat-chef"></i>
                            cuisine du monde
                        {% endif %}
                        {% if details.cafe %}
                            <i class="fa-solid fa-coffee-pot"></i>
                            café
                        {% endif %}
                        {% if details.salonThe %}
                            <i class="fa-solid fa-mug-tea"></i>
                            salon de thé
                        {% endif %}
                    </p>
                </div>

                {# ///content cta #}
                <div class="content_tow_cta">
                    {% if details.site1 != "" %}
                        <div class="site_web non_active">
                            <a class="btn btn-success" href="{{details.site1 | raw}}" target="_blank">Lien :  site Web</a>
                        </div>
                    {% endif %}
                </div>

                <hr>

                <div class="fonctionnalite">
                    {#ancien class produit#}
                    <h5>
                        Fonctionalités:
                    </h5>
                    <ul>
                        {% if details.fonctionalite1 %}
                            <li>{{details.fonctionalite1 | raw}}</li>
                        {% endif %}

                    </ul>


                </div>

                <hr>

                <div class="fourchette_de_prix">
                    <h5>
                        Fourchette de prix:
                    </h5>
                    <ul>
                        {% if details.fourchettePrix1 %}
                            <li>{{details.fourchettePrix1 | raw}}</li>
                        {% endif %}

                    </ul>
                </div>

                <hr>

                <div class="horaire">
                    <h5>
                        Horaires :
                    </h5>
                    <ul>
                        {% if details.horaires1 %}
                            <li>{{details.horaires1 | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <div class="prestation">
                    <h5>
                        Prestation :
                    </h5>
                    <ul>
                        {% if details.prestation1 %}
                            <li>{{details.prestation1 | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <div class="regime_speciaux">
                    <h5>
                        Régime spécial :
                    </h5>
                    <ul>
                        {% if details.regimeSpeciaux1 %}
                            <li>{{details.regimeSpeciaux1 | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <div class="repas">
                    <h5>
                        Repas :
                    </h5>
                    <ul>
                        {% if details.repas1 %}
                            <li>{{details.repas1 | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <div class="tel">
                    <h5>
                        Téléphone :
                    </h5>
                    <ul>
                        {% if details.tel %}
                            <li>{{details.tel | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <hr>

                {% if (app.user) %}
                    <div class="content_one_cta text-center mt-3" data-dem="rxbifbn:123nrtntntn:,ttt:cft{{app.user.id}}jker:bdyt">
                        {# <button class="btn btn-success " id="givs-avis-resto-tom-js" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap">Donné votre avis</button> #}
                        <button class="btn btn-success" id="givs-avis-resto-tom-js" data-bs-toggle="modal" data-bs-target="#modalAvisRestaurant">Donné votre avis</button>
                    </div>

                    {% if tribu_t_resto_pastille|length > 0 %}
                        <div class="mt-3" style="font-size: 13px;">
                            {% for item in tribu_t_resto_pastille %}
                               <div>
                                <span class="nom"><b>Tribu {{ item["table_name"]|split('_', 4)|last|replace({'_':' '}) }}</b></span>
                                <span class="lioTe col-6 non_active">
                                    <i class="fa-solid fa-star checked" style="color: rgb(233 231 223);"></i>
                                    <i class="fa-solid fa-star checked" style="color: rgb(233 231 223);"></i>
                                    <i class="fa-solid fa-star checked" style="color: rgb(233 231 223);"></i>
                                    <i class="fa-solid fa-star" style="color: rgb(233 231 223);"></i>
                                </span>
                                <a href="#" class="avis non_active" style="text-decoration:none;color:#19a8d8;">&nbsp;&nbsp;0 avis</a></div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% if tribu_t_resto_joined_pastille|length > 0 %}
                        <div class="mt-3" style="font-size: 13px;">
                            {% for item in tribu_t_resto_joined_pastille %}
                               <div>
                                <span class="nom"><b>Tribu {{ item["table_name"]|split('_', 4)|last|replace({'_':' '}) }}</b></span>
                                <span class="lioTe col-6 non_active">
                                    <i class="fa-solid fa-star checked" style="color: rgb(233 231 223);"></i>
                                    <i class="fa-solid fa-star checked" style="color: rgb(233 231 223);"></i>
                                    <i class="fa-solid fa-star checked" style="color: rgb(233 231 223);"></i>
                                    <i class="fa-solid fa-star" style="color: rgb(233 231 223);"></i>
                                </span>
                                <a href="#" class="avis non_active" style="text-decoration:none;color:#19a8d8;">&nbsp;&nbsp;0 avis</a></div>
                            {% endfor %}
                        </div>
                    {% endif %}

                    {% if tribu_t_can_pastille|length > 0 %}
                        <div class="mt-3" style="font-size: 13px;">
                            {% for item in tribu_t_can_pastille %}
                               {# <span><b>{{ item["table_name"] }}</b> Voulez-vous pastiller ce restaurant? <button id="btnPastilleCarte" class="btn btn-primary" onclick="showTribuTForRestoPast(this)" type="button">Oui</button></span> #}
                               <div><div><b>Tribu {{ item["table_name"]|split('_', 4)|last|replace({'_':' '}) }}</b> Voulez-vous pastiller ce restaurant? <button data-name="{{details.denominationF | raw}}" data-tbname = {{item["table_name"]}} data-id="{{details.id}}" id="btnPastilleCarte" class="btn btn-primary" onclick="pastilleRestoForTribuT(this)" type="button">Oui</button></div></div>
                            {% endfor %}
                        </div>
                        {# <div class="mt-3">
                                Voulez-vous pastiller ce restaurant? <button id="btnPastilleCarte" class="btn btn-primary" onclick="showTribuTForRestoPast(this)" type="button">Oui</button>
                        </div> #}
                        <div style="display:none;" class="alert alert-success mt-3 mb-3 successPastille" role="alert">
                        </div>
                        <div class="mb-4 mt-4" id="containerPastilleResto" style="display:none;height:100px;">
                            <div class="mb-3">
                                <h5 class="text-primary pastTitle">Pastillé ce restaurant pour votre tribu T</h5>
                            </div>
                            <div class="mb-3">
                                <select class="form-select selectTribuForPast" onchange="selectTribuForPast(event)">
                                    <option value="0" selected>Selectionnez une tribu</option>
                                    {% for item in tribu_t_can_pastille %}
                                    <option value="{{ item["table_name"] }}">{{ item["table_name"] }}</option>
                                    {% endfor %}
                                </select>   
                            </div>
                            <div style="float:right;height:50px" class="btnAnnuleAndConfirm">
                                <button type="button" class="btn btn-danger annulPast" onclick="annulePastille()">Annuler</button>
                                <button onclick="pastilleRestoForTribuT(event)" data-id="{{details.id}}" data-name="{{details.denominationF  | raw}}" type="button" class="btn btn-primary confirmPast" disabled>Pastillez</button>
                            </div>
                        </div>
                       {# <div class="modal fade" id="modalForPastilleResto" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-centered">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Pastillé ce restaurant pour votre tribu T</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body">
                                        <label for="selectTribut">Selectionnez une tribu</label>
                                        {% for item in tribu_t_owned %}
                                            <p>{{ item["table_name"] }}</p>
                                        {% endfor %}
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                        <button type="button" class="btn btn-primary">Pastillez</button>
                                    </div>
                                </div>
                            </div>
                        </div> #}
                    {% endif %}
                {% endif %}
                
                
            </div>
        </div>
	</div>
</div>