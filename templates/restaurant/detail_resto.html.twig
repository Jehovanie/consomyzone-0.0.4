<div class="content_home content_body_details_jheo_js">
	<div class="left_content_home">
        <div class="description" id="details-coord" data-toggle-id-resto="{{details.id}}" data-toggle-id-dep="{{id_dep}}" data-latitude="{{((details.poiY) ? details.poiY : '0' )|format_number({fraction_digit: 14}) }}" data-longitude="{{((details.poiX)  ? details.poiX : '0') |format_number({fraction_digit: 15})}}" data-nom="{{details.denominationF}}" data-codeinsee="{{details.codinsee}}">
            <div class="content_titre_details">
               
                {# /// nom et propriété #}
                <div class="titre text-center">
                    <div class="mb-2 restoNameWithLogoTribu" style="display:flex;justify-content:center">
                        <span class="mt-2 ms-3 me-1 text-center"><b>{{details.denominationF | raw}}</b></span>
                        {% if (app.user) %}
                            {% if tribu_t_resto_pastille|length > 0 %}
                                {% for item in tribu_t_resto_pastille %}
                                    {% if item["logo_path"] != "" %}
                                        <img class="ms-1" width="20" src="{{asset(item["logo_path"])}}" alt="">
                                    {% else %}
                                        <img  width="20" src="/public/uploads/tribu_t/photo/avatar_tribu.jpg" alt="">
                                    {% endif %}
                                {% endfor %}
                            {% endif %}
                            {% if tribu_t_resto_joined_pastille|length > 0 %}
                                    {% for item in tribu_t_resto_joined_pastille %}
                                        {% if item["logo_path"] != "" %}
                                            <img class="ms-1" width="20" src="{{asset(item["logo_path"])}}" alt="">
                                        {% else %}
                                            <img class="ms-1" width="20" src="/public/uploads/tribu_t/photo/avatar_tribu.jpg" alt="">
                                        {% endif %}
                                    {% endfor %}
                            {% endif %}
                        {% endif %}
                    </div>
                    <p class="card-text cmz-adresse">
                        <a href="#" class="small">  
                            {{details.numvoie|lower}}
                            {{details.typevoie|lower}}
                            {{details.nomvoie|lower}}
                            {{details.codpost|lower}}
                            {{details.villenorm|lower}}
                        </a>
                    </p>
                    <span>
                        <a id="see-tom-js" class="see-avis btn btn-warning" data-bs-toggle="modal" data-bs-target="#staticBackdrop" onclick="showListAvie()">
                           <span class="nbr_avis_resto_jheo_js">{{details.avis.nbr}}</span> avis
                        </a>
                    </span>
                </div>
            </div>

            <div class="p-4">
                    
                {# note avis   #}
                <hr>
                <div class="content_note">
                    <div class="start">
                        <i class="fa-solid fa-star" data-rank="1"></i>
                        <i class="fa-solid fa-star" data-rank="2"></i>
                        <i class="fa-solid fa-star" data-rank="3"></i>
                        <i class="fa-solid fa-star" data-rank="4"></i>
                    </div>

                    <div class="nombre_avis"></div>
                </div>

                <hr>
                {# ///activiter #}

                <div class="content_activite">
                    <p class="activite">
                        <span class="fw-bold">Type restaurant:</span>
                        {% if details.restaurant %}
                            <i class="fa-solid fa-utensils"></i>
                            restaurant
                        {% endif %}
                        {% if details.brasserie %}
                            <i class="fa-solid fa-beer-mug-empty"></i>
                            Brasserie
                        {% endif %}
                        {% if details.creperie %}
                            <i class="fa-solid fa-pancakes"></i>
                            creperie
                        {% endif %}
                        {% if details.fastFood %}
                            <i class="fa-solid fa-burger"></i>
                            fastFood
                        {% endif %}
                        {% if details.pizzeria %}
                            <i class="fa-solid fa-pizza-slice"></i>
                            pizzeria
                        {% endif %}
                        {% if details.boulangerie %}
                            <i class="fa-solid fa-pie"></i>
                            boulangerie
                        {% endif %}
                        {% if details.bar %}
                            <i class="fa-solid fa-martini-glass-empty"></i>
                            bar
                        {% endif %}
                        {% if details.cuisineMonde %}
                            <i class="fa-solid fa-hat-chef"></i>
                            cuisine du monde
                        {% endif %}
                        {% if details.cafe %}
                            <i class="fa-solid fa-coffee-pot"></i>
                            café
                        {% endif %}
                        {% if details.salonThe %}
                            <i class="fa-solid fa-mug-tea"></i>
                            salon de thé
                        {% endif %}
                    </p>
                </div>

                {# ///content cta #}
                <div class="content_tow_cta">
                    {% if details.site1 != "" %}
                        <div class="site_web non_active">
                            <a class="btn btn-success" href="{{details.site1 | raw}}" target="_blank">Lien :  site Web</a>
                        </div>
                    {% endif %}
                </div>

                <hr>

                <div class="fonctionnalite">
                    {#ancien class produit#}
                    <h5>
                        Fonctionalités:
                    </h5>
                    <ul>
                        {% if details.fonctionalite1 %}
                            <li>{{details.fonctionalite1 | raw}}</li>
                        {% endif %}

                    </ul>


                </div>

                <hr>

                <div class="fourchette_de_prix">
                    <h5>
                        Fourchette de prix:
                    </h5>
                    <ul>
                        {% if details.fourchettePrix1 %}
                            <li>{{details.fourchettePrix1 | raw}}</li>
                        {% endif %}

                    </ul>
                </div>

                <hr>

                <div class="horaire">
                    <h5>
                        Horaires :
                    </h5>
                    <ul>
                        {% if details.horaires1 %}
                            <li>{{details.horaires1 | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <div class="prestation">
                    <h5>
                        Prestation :
                    </h5>
                    <ul>
                        {% if details.prestation1 %}
                            <li>{{details.prestation1 | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <div class="regime_speciaux">
                    <h5>
                        Régime spécial :
                    </h5>
                    <ul>
                        {% if details.regimeSpeciaux1 %}
                            <li>{{details.regimeSpeciaux1 | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <div class="repas">
                    <h5>
                        Repas :
                    </h5>
                    <ul>
                        {% if details.repas1 %}
                            <li>{{details.repas1 | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <div class="tel">
                    <h5>
                        Téléphone :
                    </h5>
                    <ul>
                        {% if details.tel %}
                            <li>{{details.tel | raw}}</li>
                        {% endif %}
                    </ul>
                    <hr>

                </div>

                <hr>

                {% if (app.user) %}

                    <div class="d-none content_one_cta text-center mt-3 mb-3" data-dem="rxbifbn:123nrtntntn:,ttt:cft{{app.user.id}}jker:bdyt">
                        <button class="btn btn-success " id="givs-avis-resto-tom-js" data-bs-toggle="modal" data-bs-target="#modalAvisRestaurant">Donné votre avis</button>
                    </div>

                    <div class="pastileThisResto p-3 mt-3">
                        {% if tribu_t_resto_pastille|length > 0 %}
                            <div class="containerPastilleResto">
                                {% for item in tribu_t_resto_pastille %}
                                <div class="row">
                                        <div class="nomTribuTPastilleResto col-6">
                                            <b>Tribu T {{ item["table_name"]|split('_', 4)|last|replace({'_':' '})|capitalize }}</b>
                                        </div>
                                        <div class="me-auto col-6">
                                            <span class="lioTe non_active">
                                                <i class="fa-solid fa-star checked starNote"></i><b>0</b>/4
                                            </span>
                                            <a href="#" class="text-secondary avisRestoTribu non_active">&nbsp;&nbsp;Voir les avis</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if tribu_t_resto_joined_pastille|length > 0 %}
                            <div class="containerPastilleResto">
                                {% for item in tribu_t_resto_joined_pastille %}
                                    <div class="row">
                                        <div class="nomTribuTPastilleResto col-6">
                                            <b>Tribu T {{ item["table_name"]|split('_', 4)|last|replace({'_':' '})|capitalize }}</b>
                                        </div>
                                        <div class="me-auto col-6">
                                            <span class="lioTe non_active">
                                                <i class="fa-solid fa-star checked starNote"></i><b>0</b>/4
                                            </span>
                                            <a href="#" class="text-secondary avisRestoTribu non_active">&nbsp;&nbsp;Voir les avis</a>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}

                        {% if tribu_t_can_pastille|length > 0 %}
                            <div class="containerPastilleResto">
                                {% for item in tribu_t_can_pastille %}
                                {# <span><b>{{ item["table_name"] }}</b> Voulez-vous pastiller ce restaurant? <button id="btnPastilleCarte" class="btn btn-primary" onclick="showTribuTForRestoPast(this)" type="button">Oui</button></span> #}
                                    <div class="row">
                                        <div class="col-12">
                                            <b>Tribu T {{ item["table_name"]|split('_', 4)|last|replace({'_':' '})|capitalize }}</b> Voulez-vous pastiller ce restaurant? 
                                            <button data-name="{{details.denominationF | raw}}" data-tbname = {{item["table_name"]}} data-id="{{details.id}}" id="btnPastilleCarte" class="btn btn-primary" onclick="pastilleRestoForTribuT(this)" type="button" data-velona="{{item["logo_path"] != "" ? asset(item["logo_path"]) : asset('/public/uploads/tribu_t/photo/avatar_tribu.jpg')}}">Oui</button>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>

                {% endif %}
            </div>
        </div>
	</div>
</div>