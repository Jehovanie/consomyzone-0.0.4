<div class="description content_body_details_jheo_js" data-toggle-latitude="{{((details.latitude) ? details.latitude : '0' )|format_number({fraction_digit: 6})}}" data-toggle-longitude="{{((details.longitude) ? details.longitude : '0')|format_number({fraction_digit: 6})}}" data-toggle-nametabac="{{details.nom}}">
    <div class="content_titre_details">
        <figure class="text-center mt-4">
            <blockquote class="blockquote">
                <p> 
                    {{details.nom | upper}}  
                </p>
               
            </blockquote>
            <figcaption class="blockquote-footer">
               Adresse :  <a href="#" class="small text-center ">{{details.adresse | raw}}</a>
            </figcaption>  
        </figure>
       
    </div>

    <div class="p-4">
        {# note avis   #}
        {# <hr> #}
        <div class="content_note text-center mb-3">
            <div class="start">
                <i class="fa-solid fa-star" data-rank="1"></i>
                <i class="fa-solid fa-star" data-rank="2"></i>
                <i class="fa-solid fa-star" data-rank="3"></i>
                <i class="fa-solid fa-star" data-rank="4"></i>
            </div>
            
            <div class="nombre_avis">
                <button class="btn btn-secondary btn-md see-avis non_active"  data-bs-toggle="modal" data-bs-target="#staticBackdrop">Avis</button>
            </div>
        </div>

        <hr>
 
        {% if details.barTabac %}
            <div class="content_activite">
                <p class="activite">
                    Bar Tabac
                </p>
            </div>
            <hr>
        {% endif %}

        {% if details.bureauTabac %}
            <div class="content_activite">
                <p class="activite">
                    Bureau Tabac
                </p>
            </div>
            <hr>
        {% endif %}

        {% if details.caveCigare %}
            <div class="content_activite">
                <p class="activite">
                    Cave Cigare
                </p>
            </div>
            <hr>
        {% endif %}

        {% if details.tabacPresse %}
            <div class="content_activite">
                <p class="activite">
                    Tabac Presse
                </p>
            </div>
            <hr>
        {% endif %}

        {% if details.dep and details.depName %}
            <div class="content_activite">
                <p class="activite">
                    <span class="fw-bold">Departement:</span>
                    {{details.dep  | raw}}  {{details.depName  | raw}}
                </p>
            </div>
            <hr>
        {% endif %}


        {% if details.telephone %}
            <div class="content_activite">
                <p class="activite">
                    <span class="fw-bold">Telephone:</span>
                        {{details.telephone | raw}}
                </p>
            </div>
            <hr>
        {% endif %}

        {% if details.adresse %}
            <div class="content_activite">
                <p class="activite">
                    <span class="fw-bold">Adress:</span>
                    {{details.adresse | raw}}
                </p>
            </div>
            <hr>
        {% endif %}

        {% if details.services %}
            <div class="content_activite">
                <p class="activite">
                    <span class="fw-bold">Service :</span>
                </p>
                <p class="card-text p-2">
                    {{details.services|replace({"&" : ""})}}
                </p>
            </div>
            <hr>
        {% endif %}



    </div>
</div>