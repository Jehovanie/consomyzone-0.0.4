    {% apply inline_css %}
        <style>
            {# here, define your CSS styles as usual #}
            .title {
                color: blue;
            }

            .container_fluid{
                
                width: 100%;
                z-index: 1;
                height: 100vh;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .container{
                display: block;
                width: 80%;
                min-height: 80%;
                margin: auto;

                display: block;
                border-radius: 15px;
                padding: 25px;
                
            }

            a{
                text-decoration: none;
                color: blue;
            }

            .btn_style{
                color: white;
                border:none;
                width: 150px;
                height: 50px;
                border-radius: 5px;
                font-size: 14pt;
                margin-top: 5px;
                padding: 10px 15px;
            }

            .btn_primary{
                background-color:#007bff;
                margin-right: 10px;
            }

            .btn_danger{
                background-color: #dc3545;
            }

            .image_logo{
                display: block;
                width: 160px;
                height: 80px;
            }


        </style>
    {% endapply %}
</head>
<body>
    <div class="container_fluid">
    
        <div class="container">
            <img class="image_logo" src="{{ email.image('@images/logo.png') }}" alt="Logo">
            {# <img src="{{ absolute_url(asset('assets/image/logo.png')) }}" alt="Logo"> #}
            
            {{ content | raw }}
        </div>
    </div>
</body>
</html>

