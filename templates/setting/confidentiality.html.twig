{% extends 'base.html.twig' %}

{% block title %}ConsoMyZone
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/account/account.css')}}">
{% endblock %}

{% block body %}

	<div id="settingProfilId">

		<div class="content_left_menu_account fixed-top mt-5 col">
			<div class="left_menu">
				{% include "shard/account_navleft.html.twig" %}
			</div>
		</div>
		<div class="fixed-top">
			{{ include('shard/account_navbar.html.twig') }}
		</div>

		<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
			<symbol id="check-circle-fill" fill="currentColor" viewbox="0 0 16 16">
				<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
			</symbol>
			<symbol id="exclamation-triangle-fill" fill="currentColor" viewbox="0 0 16 16">
				<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
			</symbol>
		</svg>

		<div class="row account">
			<div class="col content_global ">
				<div class="right_content">
					<div class="row">
						<div class="row" style="height:100%; margin-top:10%">
							<div class="col-lg-6 col-md-6 col-sm-6" style="height:100%; margin-left:10%">
								<div class="container">
									<h4>Confidentialit√©</h4>
									<div class="card card-pub p-3">

										{% if message != null %}

											{% if isSuccess == true %}
												<div id="succesMessage" class="alert alert-success">
													<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
													{{ message }}</div>
											{% endif %}

											{% if isSuccess == false %}
												<div id="succesMessage" class="alert alert-danger">
													<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Danger:"><use xlink:href="#exclamation-triangle-fill"/></svg>
													{{ message }}</div>
											{% endif %}

										{% endif %}

										{{ form_start(form , {'method': 'POST'}) }}

										<div class="row p-2">
											<div class="col-6">
												<label class="form-check-label" for="flexSwitchCheckDefault">Notification active</label>

											</div>
											<div class="col-6">
												<div class="form-check form-switch">
													{{ form_row(form.notifIsActive) }}
												</div>
											</div>

										</div>

										<div class="row p-2">
											<div class="col-6">
												<label>Qui peut voir votre profile ?</label>
											</div>
											<div class="col-6">

												{{ form_row(form.profil) }}

											</div>
										</div>

										<div class="row p-2">
											<div class="col-6">
												<label>Qui peut envoyer une invitation d'ami(e) ?</label>
											</div>
											<div class="col-6">
												{{ form_row(form.invitation) }}
											</div>
										</div>

										<div class="row p-2">
											<div class="col-6">
												<label>Qui peut voir votre liste d'ami(e)s ?</label>
											</div>
											<div class="col-6">
												{{ form_row(form.amie) }}
											</div>
										</div>

										<div class="row p-2">
											<div class="col-6">
												<label>Qui peut voir votre publication ?</label>
											</div>
											<div class="col-6">
												{{ form_row(form.publication) }}
											</div>
										</div>

										<div class="row p-2">
											<div class="col-6">
												<label>Qui peut voir votre adresse email ?</label>
											</div>
											<div class="col-6">
												{{ form_row(form.email) }}
											</div>
										</div>

										<div class="row p-2">
											<div class="col-10"></div>
											<div class="col-2">
												{{ form_row(form.submit, { 'label': 'Modifier' }) }}
											</div>
										</div>


										{{ form_end(form) }}

									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</form>


{% endblock %}
