{% extends 'base.html.twig' %}

{% block title %}
	ConsoMyZone : mais attributs
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{asset('assets/css/account/account.css')}}">
{% endblock %}

{% block javascripts %}
<script src="{{ asset('assets/js/account/account.js') }}" defer></script>{% endblock %}
{% block body %}
	<main>
		<div class="content_left_menu_account fixed-top mt-5 col">
			<div class="left_menu">
				{% include ("shard/account_navleft.html.twig" )%}
			</div>
		</div>
		<div class="fixed-top bg-blanc">
			{{ include('shard/account_navbar.html.twig') }}
		</div>

		<div class="row account">
			<center>
				<h1>
					<i class="fa-solid fa-list"> </i>
					List de mes etablissements.
				</h1>
			</center>
			{% for ferme in fermes %}
            <div class="row list_mais_attribut mt-3">
				
					<div class=" col-md-2">
						<div class="card-attr-ferme">
							<div class="card-body">
								<p><img src="{{asset('assets/image/icon-ferme.png')}}" width="20"> {{ferme.nomFerme}}</p>
							</div>
						</div>
					</div>
					<div class="col-md-2">
						<a href="/add-etab-modif/{{ferme.id}}" type="button" class="btn btn-outline-primary modif-etab" data-token="2ahUK:Ewip3tqU6Ob7AhW3gc:4B.{{ferme.id}}H:bAUBJQQ-EN6BAhzEAo"><i class="fa-solid fa-pen"></i> Modifier</a>
					</div>
					<div class="col-md-2">
    
					<a href="{{path('detail_ferme', {'nom_dep':ferme.departementName ,'id_dep':ferme.departement, 'id_ferme': ferme.id }) }}" class="btn btn-outline-success">
						<i class="fa-solid fa-eye text-success"></i>
						Voir Details</a>

					</div>
			</div>
			{% endfor %}
		</div>
	</main>


{% endblock %}

