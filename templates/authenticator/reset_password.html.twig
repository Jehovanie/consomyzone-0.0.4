	<main>
		<div class="content_global">
			<div class="right_content">

			 	{% if flash %}
                    <div class="custom-flash-inscription bg-danger">
                        <div class="row ">
                            <div class="col">
                                <h4 class="text-light">
                                    {{flash.titre}}
                                </h4>
                                <p class="text-light">
                                    {{ flash.content }}
                                </p>
                            </div>
                            <div class="col-md-3">
                                <i class="fa-solid fa-triangle-exclamation text-light fa-danjer"></i>
                            </div>
                        </div>
                    </div>
                {% endif %}

				<div class="row" style="height: 100%">
					<div class="col-lg-5 col-md-5 col-sm-6 col-xs-6 m-auto p-3">
						<div class="content_form text-black">
							<div class="user_icon">
								<img src="{{asset("assets/image/icon_user.png")}}" alt="User Icon">
							</div>

							<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
								<symbol id="check-circle-fill" fill="currentColor" viewbox="0 0 16 16">
									<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
