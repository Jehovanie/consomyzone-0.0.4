								</symbol>
							</svg>

							<form method="post">

								{% if app.request.get('message') %}
                                
									{% if app.request.get('isSuccess') == 1 %}
										<div id="succesMessage" class="alert alert-success">
											<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
											{{ app.request.get('message') }}</div>
									{% endif %}

								{% else %}
									<h2 class="h2 mb-3 font-weight-normal">Réinitialiser le mot de passe</h2>
								{% endif %}

								<!-- Email input -->
								<div class="mb-2">
									<label class="fw-bolder form-label" for="email">E-mail</label>
									<input type="email" name="email" id="email" class="form-control input_email_reset_pass_js_jheo">
								</div>

								<!-- Submit button -->
								<input class="fw-bolder cta_connexion btn_submit btn_send_reset_pass_js_jheo" type="submit" value="Réinitialiser mon mot de passe">
							
							</form>
						</div>
					</div>
				</div>
				
