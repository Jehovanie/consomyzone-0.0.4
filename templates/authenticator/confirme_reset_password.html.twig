{% extends 'base.html.twig' %}

{% block title %}
	ConsoMyZone: Restore mon mots de passe
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('assets/css/account/auth.css') }}">
	<link rel="stylesheet" href="{{asset('assets/css/style.css')}}">
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('assets/js/auth/auth.js') }}" defer></script>
{% endblock %}

{% block body %}

	<div class="content_nav_top">
		{% include "shard/navbar.twig" %}
	</div>

	<main>
		<div class="content_global">
			<div class="right_content">

				{% if flash %}
                    <div class="custom-flash-inscription bg-danger">
                        <div class="row ">
                            <div class="col">
                                <h4 class="text-light">
                                    {{flash.titre}}
                                </h4>
                                <p class="text-light">
                                    {{ flash.content }}
                                </p>
                            </div>
                            <div class="col-md-3">
                                <i class="fa-solid fa-triangle-exclamation text-light fa-danjer"></i>
                            </div>
                        </div>
                    </div>
                {% endif %}


				<div class="row" style="height: 100%">
					<div class="col-lg-5 col-md-5 col-sm-6 col-xs-6 m-auto p-3">
						<div class="content_form text-black">
							<div class="user_icon">
								<img src="{{asset("assets/image/icon_user.png")}}" alt="User Icon">
							</div>

							<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
								<symbol id="check-circle-fill" fill="currentColor" viewbox="0 0 16 16">
									<path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
								</symbol>
								<symbol id="exclamation-triangle-fill" fill="currentColor" viewbox="0 0 16 16">
									<path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
								</symbol>
							</svg>

							<form method="post">

								{% if app.request.get('message') %}
                                
									{% if app.request.get('isSuccess') == 1 %}
										<div id="succesMessage" class="alert alert-success">
											<svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
											{{ app.request.get('message') }}</div>
									{% endif %}

								{% else %}
									<h1 class="h3 mb-3 font-weight-normal">RÃ©initialiser le mot de passe</h1>
								{% endif %}

								<!-- Email input -->
								<div class="mb-2">
									<label class="fw-bolder form-label" for="password">Nouveau mot de passe</label>
									<div class="content_input_pass">
										<input type="password" name="password" id="password" class="form-control toggle_password_js_jheo input_pass_js_jheo">
										<i  class="fas fa-eye-slash" id="togglePassword"></i>
									</div>
								</div>

                                <!-- Email input -->
								<div class="mb-2">
									<label class="fw-bolder form-label" for="confirmPassword">Confirmer mon nouveau mot de passe</label>
									<input type="password" name="confirmPassword" id="confirmPassword" class="form-control input_confirm_pass_js_jheo">
								</div>

								<!-- Submit button -->
								<input class="fw-bolder cta_connexion btn_submit btn_valid_reset_pass_js_jheo" type="submit" value="Restaurer mon mot de passe">
							
							</form>
						</div>
					</div>
				</div>

				
			</div>
		</div>
	</main>

{% endblock %}
