<div class="d-flex flex-column align-items-stretch flex-shrink-0 position-sticky" id="page-top">
	<div class="content_list_menu">
		<div class="choix_list_cart mx-auto">
			<input class="input-grey-rounded" id="recherche-input-tribut" type="text" placeholder="Recherche tribu-T">
		</div>
		<div class="mt-3">
			<a href="{{path("app_account")}}" class="nav-link link-dark not_autorised ms-3">
				<i class="fa-solid fa-solid-nav fa-newspaper fa-lg"></i>
				<span lng-tag="actualite">Tribu G</span>
			</a>
		</div>

		<div class="mt-3 mb-3">
			<button class="btn btn-primary ms-3" data-bs-toggle="modal" data-bs-target="#ModalCreationTribuT"><i class="fa-solid fa-plus"> </i>Créer un nouveau tribu-T</button>
		</div>
		
		
		<hr>

		<p class="fw-bold mb-2">Tribu-T que vous avez créé</p>
		<ul>
			
			{% for  tribus in tribu_T_owned %}
			  		{# {{dump(tribus,tribus|length)}}   #}
					{% if tribus.logo_path  is defined %}
							{% set nameTribu = tribus.name|split('_') %}
							{% set index = nameTribu|length -1  %}
							<li class="mb-2">
								<div class="row card-my-tribu-t">
									<div class="col-2">
										 <img class="avatar-tribu" src="{{ tribus.logo_path is not same as("") ? '/public' ~ tribus.logo_path: asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt=""> 
										 {# <img class="avatar-tribu" src="{{ tribus.logo_path is not same as("") ? tribus.logo_path: asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt="">  #}
									</div>
									<div class="col-9">
										<p>
											 <a href="" class="tribu_t owned" data-tribu-rank="{{app.user.id}}" data-table-name="{{tribus.name}}">{{ "Tribu T " ~ nameTribu[index] }}</a> 
										</p>
									</div>
								</div>
							</li>
					{% else %}
						{% for tribu in tribus %}

							{% set nameTribu = tribu.name|split('_') %}
							{% set index = nameTribu|length -1  %}
							<li class="mb-2">
								<div class="row card-my-tribu-t">
									<div class="col-2">
									<img class="avatar-tribu" src="{{ tribu.logo_path is not same as("") ? '/public'~ tribu.logo_path: asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt="">
									{# <img class="avatar-tribu" src="{{ tribu.logo_path is not same as("") ? tribu.logo_path: asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt=""> #}

									</div>
									<div class="col-9">
										<p>
											<a href="" class="tribu_t owned" data-tribu-rank="{{app.user.id}}" data-table-name="{{tribu.name}}">{{ "Tribu T " ~ nameTribu[index] | capitalize }}</a>
										</p>
									</div>
								</div>
							</li>
						{% endfor %}
					{% endif %}
					
				{% endfor %}
					
		</ul>
		

		<hr class="mt-1 mb-1">

		<p class="fw-bold mb-2">Tribu-T dont vous êtes membre</p>
		<ul>
			
			{% for  tribus in tribu_T_joined %}
				{# {{dump(tribus,tribus|length)}}   #}
