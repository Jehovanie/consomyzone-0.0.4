<div class="d-flex flex-column align-items-stretch flex-shrink-0 position-sticky ms-3" id="page-top">
	<div class="content_list_menu mt-5">
		<div class="choix_list_cart mx-auto">
			<input class="input-grey-rounded" id="recherche-input-tribut" type="text" placeholder="Recherche tribu-T">
		</div>
		<div class="mt-3">
			<a href="{{path("app_account")}}" class="nav-link link-dark not_autorised ms-3">
				<i class="fa-solid fa-solid-nav fa-newspaper fa-lg"></i>
				<span lng-tag="actualite">Actualité</span>
			</a>
		</div>

		<div class="mt-3">
			<button class="btn btn-primary ms-3" data-bs-toggle="modal" data-bs-target="#ModalCreationTribuT"><i class="fa-solid fa-plus"> </i>Créer un nouveau tribu-T</button>
			
		</div>
		
		
		<hr>

		<p class="fw-bold">Tribu-T que vous avez créé</p>
		<ul>
			
			{% for  tribus in tibu_T_owned %}
			  		{# {{dump(tribus,tribus|length)}}   #}
					{% if tribus.logo_path  is defined %}
							<li>
								<div class="row card-my-tribu-t">
									<div class="col-2">
										 <img class="avatar-tribu" src="{{ tribus.logo_path is not same as("") ? asset(tribus.logo_path): asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt=""> 
									</div>
									<div class="col-9">
										<p>
											 <a href="" class="tribu_t owned" data-tribu-rank="{{app.user.id}}">{{tribus.name}}</a> 
										</p>
									</div>
								</div>
							</li>
					{% else %}
						{% for tribu in tribus %}
							<li>
								<div class="row card-my-tribu-t">
									<div class="col-2">
									<img class="avatar-tribu" src="{{ tribu.logo_path is not same as("") ? asset(tribu.logo_path | replace({'/public':''})): asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt="">

									</div>
									<div class="col-9">
										<p>
											<a href="" class="tribu_t owned" data-tribu-rank="{{app.user.id}}">{{tribu.name}}</a>
										</p>
									</div>
								</div>
							</li>
						{% endfor %}
					{% endif %}
					
				{% endfor %}
			
			
		</ul>
		

		<hr>

		<p class="fw-bold">Tribu-T dont vous êtes membre</p>
		<ul>
			
			{% for  tribus in tibu_T_joined %}
			  		{# {{dump(tribus,tribus|length)}}   #}
					{% if tribus.logo_path  is defined %}
							<li>
								<div class="row card-my-tribu-t">
									<div class="col-2">
										 <img class="avatar-tribu" src="{{ tribus.logo_path is not same as("") ? asset(tribus.logo_path): asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt=""> 
									</div>
									<div class="col-9">
										<p>
											 <a href="" class="tribu_t owned" data-tribu-rank="{{app.user.id}}">{{tribus.name}}</a> 
										</p>
									</div>
								</div>
							</li>
					{% else %}
						{% for tribu in tribus %}
							<li>
								<div class="row card-my-tribu-t">
									<div class="col-2">
										<img class="avatar-tribu" src="{{ tribu.logo_path is not same as("") ? asset(tribu.logo_path): asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt="">
									</div>
									<div class="col-9">
										<p>
											<a href="" class="tribu_t owned" data-tribu-rank="{{app.user.id}}">{{tribu.name}}</a>
										</p>
									</div>
								</div>
							</li>
						{% endfor %}
					{% endif %}
					
				{% endfor %}
			
			
		</ul>

	</div>
</div>
