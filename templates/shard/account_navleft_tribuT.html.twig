						{% set nameTribu = tribus.name|split('_') %}
						{% set index = nameTribu|length -1  %}
						<li class="mb-2">
							<div class="row card-my-tribu-t">
								<div class="col-2">
										<img class="avatar-tribu" src="{{ tribus.logo_path is not same as("") ? '/public' ~ tribus.logo_path: asset('uploads/tribus/photos/avatar_tribu.jpg')}}" alt=""> 
										{# <img class="avatar-tribu" src="{{ tribus.logo_path is not same as("") ? tribus.logo_path: asset('uploads/tribus/photos/avatar_tribu.jpg')}}" alt="">  #}
								</div>
								<div class="col-9">
									<p>
											<a href="" class="tribu_t owned other" data-tribu-rank="{{app.user.id}}"  data-table-name="{{tribus.name}}">{{ "Tribu T " ~ nameTribu[index] }}</a> 
									</p>
								</div>
							</div>
						</li>
				{% else %}
					{% for tribu in tribus %}
					
						{% set nameTribu = tribu.name|split('_') %}
						{% set index = nameTribu|length -1  %}
						<li class="mb-2">
							<div class="row card-my-tribu-t">
								<div class="col-2">
									<img class="avatar-tribu" src="{{ tribu.logo_path is not same as("") ? '/public' ~ tribu.logo_path : asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt="">
									{# <img class="avatar-tribu" src="{{ tribu.logo_path is not same as("") ? tribu.logo_path : asset('/uploads/tribus/photos/avatar_tribu.jpg')}}" alt=""> #}
								</div>
								<div class="col-9">
									<p>
										<a href="" class="tribu_t owned other" data-tribu-rank="{{app.user.id}}" data-table-name="{{tribu.name}}">{{ "Tribu T " ~ nameTribu[index] | capitalize }}</a>
									</p>
								</div>
							</div>
						</li>
					{% endfor %}
				{% endif %}
				
			{% endfor %}
			
		</ul>

	</div>
</div>
