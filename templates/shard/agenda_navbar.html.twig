                    {% else %}
                        <a class="nav-link {% if app.user.isLabled %}avatar-account-square-labelC {% else %} avatar-account-square{% endif %}" href="{{path('app_account')}}">
                            <img src="{{asset('assets/image/img_avatar3.png')}}" alt="">
                        </a>
                    {% endif %}
                </li>

            {% elseif app.user.type is same as("consumer")%}
            
                
                {% if statusTribut.status is same as("fondateur") and statusTribut.verified is same as(true) %}
                    <li class="nav-item avatar-account-pdp">
                        <a class="nav-link avatar-account-fondateur" href="{{path('app_account')}}">
                            <img src="{{asset('assets/image/img_avatar3.png')}}" alt="">
                        </a>
                        
                    </li>
                {% else %}
                    <li class="nav-item avatar-account-pdp">
                        <a class="nav-link avatar-account avatar-account-agenda" href="{{path('app_account')}}">
