<div class="description content_body_details_jheo_js" data-toggle-latitude="{{((details.latitude) ? details.latitude : '0' )|format_number({fraction_digit: 6})}}" data-toggle-longitude="{{((details.longitude) ? details.longitude : '0')|format_number({fraction_digit: 6})}}" data-toggle-nameferme="{{details.nomGolf}}">

    <div class="p-4">
        <div class="content_note mb-3">
            <div class="start text-center">
                <i class="fa-solid fa-star" data-rank="1"></i>
                <i class="fa-solid fa-star" data-rank="2"></i>
                <i class="fa-solid fa-star" data-rank="3"></i>
                <i class="fa-solid fa-star" data-rank="4"></i>
            </div>
             <hr>
            <div class="mt-2 nombre_avis d-flex justify-content-center align-items-center">
                <button class="btn btn-secondary btn-md see-avis non_active"  data-bs-toggle="modal" data-bs-target="#staticBackdrop">Avis</button>
            </div>
        </div>

        <hr>
 
        {# ///codePostal #}
        {% if details.cp %}
            <div class="content_activite">
                <p class="activite">
                    <span class="fw-bold">Code Postal:</span>
                    {{details.cp  | raw}}
                </p>
            </div>
            <hr>
        {% endif %}

        {% if details.nomCommune %}
            <div class="content_activite">
                <p class="activite">
                    <span class="fw-bold">Commune:</span>
                    {{details.nomCommune  | raw}}
                </p>
            </div>
            <hr>
        {% endif %}


        {% if details.telephone %}
            <div class="content_activite">
                <p class="activite">
                    <span class="fw-bold">Telephone:</span>
                        {{details.telephone | raw}}
                </p>
            </div>
            <hr>
        {% endif %}

        {% if details.adr1 %}
            <div class="content_activite">
                <p class="activite">
                    <span class="fw-bold">Adress:</span>
                    {{details.adr1 | raw}}
                </p>
            </div>
            <hr>
        {% endif %}

        <hr>

        {# ///content cta #}
        <div class="content_tow_cta mt-4">
            {% if app.user %}
                <div class="site_web">
                    <a class="{{ app.user ? 'btn btn-outline-success ' : 'btn btn-outline-success disabled' }}" href="{{details.siteWeb | raw}}" target="_blank">
                        Lien :  Site Web
                    </a>
                </div>
            {% else %}
                <div class="site_web" data-bs-toggle="tooltip" data-bs-placement="top" title="Veuillez vous connecter, pour accÃ©der au lien site web de ce golf.">
                    <a class="{{ app.user ? 'btn btn-outline-success ' : 'btn btn-outline-success disabled' }}" href="{{details.siteWeb | raw}}" target="_blank">
                        Lien :  Site Web
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>