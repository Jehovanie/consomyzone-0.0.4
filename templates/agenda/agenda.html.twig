{% extends 'base.html.twig' %}

{% block title %}
	ConsoMyZone : Agenda
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('assets/css/account/account.css')}}">
	<link rel="stylesheet" href="{{asset('assets/css/account/agenda/agenda.css')}}">
{% endblock %}
{% block bootstrap %}
	{# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"> #}
{% endblock %}


{% block javascripts %}

{% endblock %}

{% block body %}
    <div class="content-navleft-nav">
        {{ include('shard/agenda_navleft.html.twig') }}
    </div>
    <div class="fixed-top col responsif-none bg-blanc">
        {{ include('shard/agenda_navbar.html.twig') }}
    </div>

    <div class="content-agenda"></div>
    <div class="modale-agenda">
        <dialog id="cookie-dialog" class="cookie flow-content" data-spacing="lg">

            <i class="fa-solid fa-x" id="close-modal-agenda"></i>
            <form id="form_agenda">
                <div class="item-mess wrapper">
                    <h2>Message</h2>
                        <textarea  placeholder="Votre message ..." name="message" id="message" class="form__input"></textarea>
                    </div>
                <div class="item-file">
                  <input type="file" name="fileEvent" id="file-first" accept="image/*,application/*" class="inputfile inputfile-1"    data-multiple-caption="{count} files selected" multiple />
                    <label for="file-first"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                            <path
                                d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z" />
                        </svg> <span>choisissez un fichier&hellip;</span></label>
            
                    {# <input type="file" name="fileEvent" id="file" accept="image/*,application/*"> #}
                </div>
                <div class="d-flex">
                    <div class="conf">
                        <label>Confidentialité</label>
                        <div class="item-confid select">
                            
                            <select name="confidentialite" id="confidentialite">
                                <option value="1">Moi uniquement</option>
                                <option value="2">Tribu-G</option>
                                <option value="3">Tribu-T</option>
                            </select>
                        </div>
                    </div>
                    <div class="tipeE">
                        <label>Type evenement</label>
                        <div class="item-confid select">

                            <select name="eventType" id="eventType">
                                <option class="opt" value="1">Repas</option>
                                <option class="opt" value="2">Autres</option>
                            </select>
                        </div>
                        

                    </div>
                </div>
                <div>
                    <input type="text" class="form__input form__input_autre" placeholder="Veuillez préciser l'événement" name="autreEvent" id="autreEvent">
                </div>
              
                <div>
                    <label for="timeDebut">Début :</label>
                    <input type="time" name="timeDebut" id="timeDebut" class="form__input form__input_time">
                    <label for="timeFin">Fin :</label>
                    <input type="time" name="timeFin" id="timeFin" class="form__input form__input_time">
                </div>
                <div>
                  <button type="submit" id="valid_agenda" class="btn-valid-agenda">valider</button>
                </div>
            </form>
        </dialog>
    </div>
{% endblock %}